<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@drawable/hill"
    android:id="@+id/fragment_home">

    <LinearLayout
        android:id="@+id/homeBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="200dp"
                android:gravity="center"
                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/myImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@drawable/square_background_border_darkgray"
                    android:src="@drawable/ic_baseline_person_24" />

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:id="@+id/heartImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_favorite_24"/>
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="D+0"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="normal" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/friendImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@drawable/square_background_border_darkgray"
                    android:src="@drawable/ic_baseline_person_24" />
            </LinearLayout>

            <ImageView
                android:id="@+id/myBigImg"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:background="@drawable/square_background_border_darkgray"
                android:src="@drawable/ic_baseline_person_24"/>

            <ImageView
                android:id="@+id/frBigImg"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:background="@drawable/square_background_border_darkgray"
                android:src="@drawable/ic_baseline_person_24"/>

        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:background="@drawable/round_background_border_darkgray_pink"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="처음 만난 날"
                    android:textColor="@color/dark_gray"
                    android:textSize="25dp" />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_favorite_24_red"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <TextView
                android:id="@+id/firstDay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/frameheart"
                android:text="YYYY.MM.DD"
                android:textSize="40dp"
                android:textColor="@color/dark_gray"
                android:paddingBottom="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border_left_line_darkgray">

            <TextView
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="D+100"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/oneDate"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="right|center_vertical"
                android:text="YYYY-MM-DD"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border_left_line_darkgray">

            <TextView
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="D+200"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/twoDate"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="right|center_vertical"
                android:text="YYYY-MM-DD"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border_left_line_darkgray">

            <TextView
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="D+300"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/threeDate"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="right|center_vertical"
                android:text="YYYY-MM-DD"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border_left_line_darkgray">

            <TextView
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="D+400"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/fourDate"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="right|center_vertical"
                android:text="YYYY-MM-DD"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border_left_right_bottom_round_darkgray">

            <TextView
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="D+500"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/fiveDate"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="right|center_vertical"
                android:text="YYYY-MM-DD"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>