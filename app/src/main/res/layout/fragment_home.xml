<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/light_pink_main"
    android:id="@+id/fragment_home">

    <LinearLayout
        android:id="@+id/homeBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="200dp"
                android:gravity="center"
                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/friendImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@drawable/square_background_border_darkgray"
                    android:src="@drawable/ic_baseline_person_24" />

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:id="@+id/heartImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_favorite_24"/>
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="D+0"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="normal" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/myImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@drawable/square_background_border_darkgray"
                    android:src="@drawable/ic_baseline_person_24" />
            </LinearLayout>

            <ImageView
                android:id="@+id/frBigImg"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:background="@drawable/square_background_border_darkgray"
                android:src="@drawable/ic_baseline_person_24"/>

            <ImageView
                android:id="@+id/myBigImg"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:background="@drawable/square_background_border_darkgray"
                android:src="@drawable/ic_baseline_person_24"/>

        </FrameLayout>

    </LinearLayout>



</FrameLayout>